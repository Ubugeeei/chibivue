{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "DOM"
    ],
    "strict": true,
    "paths": {
      "~/*": [
        "./*"
      ],
      "chibi-vue": [
        "./packages"
      ]
    },
    "types": [
      "vitest/importMeta",
    ],
    "moduleResolution": "node",
    "allowJs": true,
  },
  "include": [
    "packages/**/*.ts",
    "example/**/**.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}